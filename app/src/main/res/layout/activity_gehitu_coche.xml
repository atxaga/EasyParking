<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <!-- Contenido personalizado del Toolbar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Botón atrás a la izquierda -->
                <LinearLayout
                    android:id="@+id/btnAtzera"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_atzera"
                        app:tint="#212121"
                        android:contentDescription="Atzera" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atzera"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_marginStart="8dp" />

                </LinearLayout>


            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/carsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto bat gehitu"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/carsSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hemen zure auto bat erregistratuko duzu"
                android:textSize="14sp"
                android:textColor="#616161"
                android:layout_marginTop="4dp" />
        </LinearLayout>
        <!-- Marca -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autoaren Marka"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/etMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adb: Toyota"
            android:textColor="@color/black"
            android:background="@drawable/bg_edittext_rounded"
            android:padding="12dp"
            android:inputType="textCapWords" />

        <!-- Modelo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autoaren Modeloa"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/etModelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adb: Corolla"
            android:background="@drawable/bg_edittext_rounded"
            android:padding="12dp"
            android:textColor="@color/black"
            android:inputType="textCapWords" />

        <!-- Hasta qué hora -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matrikula"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/etMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adb: 1111MMM"
            android:textColor="@color/black"
            android:background="@drawable/bg_edittext_rounded"
            android:padding="12dp" />

        <TextView
            android:id="@+id/mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnGehitu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gehitu"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/cyan"

                android:layout_marginEnd="8dp" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>
